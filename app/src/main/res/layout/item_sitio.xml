<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left_10dp">

        <TextView
            android:id="@+id/id_txt_item_sitio_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre sitio 1 - 123456789"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/id_img_ic_date"
            android:layout_width="@dimen/size_circle"
            android:layout_height="@dimen/size_circle"
            android:layout_below="@id/id_txt_item_sitio_nombre"
            android:src="@drawable/ic_contact_phone_black_48dp" />

        <TextView
            android:id="@+id/id_txt_item_sitio_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt_item_sitio_nombre"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_toRightOf="@id/id_img_ic_date"
            android:gravity="center_vertical"
            android:text="3156052415" />


        <ImageView
            android:id="@+id/id_img_ic_sitio_direccion"
            android:layout_width="@dimen/size_circle"
            android:layout_height="@dimen/size_circle"
            android:layout_below="@id/id_img_ic_date"
            android:background="@drawable/ic_directions_black_48dp" />

        <TextView
            android:id="@+id/id_txt_item_sitio_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt_item_sitio_telefono"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_toRightOf="@id/id_img_ic_sitio_direccion"
            android:gravity="center_vertical"
            android:text="cra 56 # 6 - 12 (FundaciÃ³n - Magdalena)" />

    </RelativeLayout>
</android.support.v7.widget.CardView>